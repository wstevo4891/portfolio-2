<!-- app/views/admin_labs/index.html.erb -->

<div class="container">
  <h1 class="text-center mt-4 mb-4">Labs</h1>

  <table class="table">
    <thead>
      <tr>
        <th scope="col">Title</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
    <% @labs.each do |lab| %>
    <tr>
      <th scope="row"><%= lab.title %></th>
      <td><%= link_to 'Show', admin_lab_path(lab), class: 'btn btn-sm btn-outline-info' %></td>
      <td><%= link_to 'Edit', edit_admin_lab_path(lab), class: 'btn btn-sm btn-outline-success' %></td>
      <td><%= link_to 'Delete', admin_lab_path(lab), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-outline-danger' %></td>
    </tr>
    <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Lab', new_admin_lab_path, class: 'btn btn-primary mt-4 mb-4' %>
</div>
