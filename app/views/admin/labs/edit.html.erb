<!-- app/views/admin_labs/edit.html.erb -->

<div class="container mt-4 mb-5">
  <div class="row justify-content-center">
    <div class="col-lg-10">
      <%= link_to 'Show', admin_lab_path(@lab), class: 'btn btn-sm btn-outline-info' %> |
      <%= link_to 'Back to List', admin_labs_path, class: 'btn btn-secondary' %>
    </div>
  </div>

  <h1 class="text-center mt-4 mb-4">Editing <%= @lab.title %></h1>

  <div class="row justify-content-center">
    <div class="col-lg-10">
      <%= render 'form', lab: @lab, url: admin_lab_path(@lab) %>
    </div>
  </div>
</div>
