= simple_form_for @project, url: url do |f|
  = f.error_notification

  = f.input :title

  = f.input :slug

  = f.input :cover, as: :file, input_html: { class: 'form-control' }

  = f.input :images, as: :file,
            input_html: { class: 'form-control', multiple: true }

  = f.input :site_link, label: 'Link to Website'

  = f.input :repo_link, label: 'Link to Github Repo'

  = f.input :description, as: :text

  = f.input :summary, as: :array, input_html: { class: 'form-control', rows: '8' }
  %button.add-summary-field.btn.btn-success.mt-4.mb-4 Add Paragraph

  = f.input :highlights

  = f.input :tech_stack,
            label: 'Technology Stack',
            collection: Project::TECH_OPTIONS,
            input_html: { multiple: true }

  = f.button :submit, 'Submit', class: 'btn btn-primary mt-4 mb-4'
