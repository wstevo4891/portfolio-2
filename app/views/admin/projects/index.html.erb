<!-- app/views/projects/index.html.erb -->

<div class="container">
  <h1 class="text-center mt-4 mb-4">Projects</h1>

  <table class="table">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
    <% @projects.each do |project| %>
    <tr>
      <th scope="row"><%= project.id %></th>
      <td><%= link_to 'Show', project, class: 'btn btn-sm btn-outline-info' %></td>
      <td><%= link_to 'Edit', edit_project_path(project), class: 'btn btn-sm btn-outline-success' %></td>
      <td><%= link_to 'Delete', project, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-outline-danger' %></td>
    </tr>
    <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Project', new_project_path, class: 'btn btn-primary mt-4 mb-4' %>
</div>
