<!-- app/views/post_sections/index.html.erb -->

<div class="container">
  <h1 class="text-center mt-4 mb-4"><%= @post.title %></h1>

  <h2 class="text-center mt-4 mb-4">Sections</h2>

  <table class="table">
    <thead>
      <tr>
        <th scope="col">Header</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
    <% @post_sections.each do |post_section| %>
    <tr>
      <th scope="row"><%= post_section.header %></th>
      <td><%= link_to 'Show', admin_post_section_path(post_section), class: 'btn btn-sm btn-outline-info' %></td>
      <td><%= link_to 'Edit', edit_admin_post_section_path(post_section), class: 'btn btn-sm btn-outline-success' %></td>
      <td><%= link_to 'Delete', admin_post_section_path(post_section), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-outline-danger' %></td>
    </tr>
    <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Post section', new_admin_post_section_path(@post), class: 'btn btn-primary mt-4 mb-4' %>
</div>
