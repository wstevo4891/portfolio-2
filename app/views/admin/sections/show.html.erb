<!-- app/views/post_sections/show.html.erb -->

<div class="container pb-5">
  <div class="row justify-content-start">
    <div class="col-4 mt-4 mb-4">
      <%= link_to 'Edit',
                  edit_admin_post_section_path(@post, @post_section),
                  class: 'btn btn-sm btn-outline-success' %> |
      <%= link_to 'Back to List',
                  admin_post_sections_path(@post),
                  class: 'btn btn-secondary' %>
    </div>
  </div>

  <div class="row justify-content-center mt-4 mb-4">
    <div class="col-12">
      <h1 class="text-center"><%= @post.title %></h1>
    </div>

    <div class="col-12 mt-4">
      <h2 class="text-center mt-4"><%= @post_section.header %></h2>
    </div>
  </div>

  <table class="table">
    <thead>
      <tr>
        <th scope="col">
          <strong>FIELD</strong>
        </th>
        <th scope="col">
          <strong>VALUE</strong>
        </th>
      </tr>
    </thead>

    <tbody>

    <% @post_section.attributes.each do |key, value| %>
      <tr>
        <td><%= key.upcase %></td>
        <td><%= key == 'body' ? markdown(value) : value %></td>
      </tr>
    <% end %>

    </tbody>
  </table>
</div>
