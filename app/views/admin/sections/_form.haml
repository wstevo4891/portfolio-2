= simple_form_for @post_section, url: url do |f|
  = f.error_notification

  = f.input :header

  .form-group
    = f.label :images
    = f.file_field :images, multiple: 'multiple', class: 'form-control'

  = f.input :body, as: :text, input_html: { rows: 10 }

  = f.button :submit, 'Submit', class: 'btn btn-primary mt-4 mb-4'
