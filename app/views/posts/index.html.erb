<!-- app/views/posts/index.html.erb -->

<div class="container">
  <h1 class="text-center mt-4 mb-4">Blog posts</h1>

  <table class="table">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
    <% @posts.each do |post| %>
    <tr>
      <th scope="row"><%= post.id %></th>
      <td><%= link_to 'Show', post, class: 'btn btn-sm btn-outline-info' %></td>
      <td><%= link_to 'Edit', edit_post_path(post), class: 'btn btn-sm btn-outline-success' %></td>
      <td><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-outline-danger' %></td>
    </tr>
    <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Blog post', new_post_path, class: 'btn btn-primary mt-4 mb-4' %>
</div>
