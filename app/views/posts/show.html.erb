<!-- app/views/posts/show.html.erb -->

<div class="container pb-5">
  <div class="row justify-content-start">
    <div class="col-4 mt-4 mb-4">
      <%= link_to 'Edit', edit_post_path(@post), class: 'btn btn-sm btn-outline-success' %> |
      <%= link_to 'Back to List', posts_path, class: 'btn btn-secondary' %>
    </div>
  </div>

  <div class="row justify-content-center mt-4 mb-4">
    <h1>Blog post <%= @post.id %></h1>
  </div>

  <table class="table">
    <thead>
      <tr>
        <th scope="col">
          <strong>FIELD</strong>
        </th>
        <th scope="col">
          <strong>VALUE</strong>
        </th>
      </tr>
    </thead>

    <tbody>

    <% @post.attributes.each do |key, value| %>
      <tr>
        <td><%= key.upcase %></td>
        <td><%= value %></td>
      </tr>
    <% end %>

    </tbody>
  </table>
</div>
