<!-- app/views/projects/_project_links.html.erb -->

<div class="col-md-10">
  <div class="row">
    <% @projects.each do |project| %>
      <div class="col-sm-6">
        <div class="project-link">
          <a href="/projects/<%= project.slug %>">
            <div style="background-image: url(<%=  project.cover %>)"></div>
            <div class="project-overlay"></div>
            <div class="overlay-text">
              <%= project.title %>
            </div>
          </a>
        </div>
      </div>
    <% end %>
  </div>
</div>
